# The Gold Box - Environment Variables Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Key for backend authentication
# Leave empty for development mode, set a secure key for production
# Generate a secure key: openssl rand -hex 32
GOLD_BOX_API_KEY=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the backend server (default: 5001)
GOLD_BOX_PORT=5001

# Flask environment mode
# Set to 'production' for production deployment
FLASK_ENV=development

# Enable/disable Flask debug mode
# Set to 'False' for production
FLASK_DEBUG=True

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
# For production, replace with your actual Foundry VTT domains
# Example: https://your-foundry-domain.com,https://another-domain.com
CORS_ORIGINS=http://localhost:30000,http://127.0.0.1:30000,http://localhost:30001,http://127.0.0.1:30001,http://localhost:30002,http://127.0.0.1:30002,http://localhost:30010,http://127.0.0.1:30010,http://localhost:30011,http://127.0.0.1:30011,http://localhost:30012,http://127.0.0.1:30012

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per minute per IP address
RATE_LIMIT_MAX_REQUESTS=5

# Rate limiting window in seconds
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (relative to backend directory)
LOG_FILE=goldbox.log

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production deployment)
# =============================================================================

# # Production server configuration
# # Use Gunicorn instead of Flask development server
# GUNICORN_WORKERS=2
# GUNICORN_BIND=0.0.0.0:5001
# GUNICORN_ACCESS_LOGFILE=-
# GUNICORN_ERROR_LOGFILE=-

# # Security settings for production
# FLASK_ENV=production
# FLASK_DEBUG=False

# # Restrictive CORS for production
# CORS_ORIGINS=https://your-foundry-domain.com

# =============================================================================
# AI SERVICE CONFIGURATION (for future implementation)
# =============================================================================

# # OpenAI API Key (optional - for future AI integration)
# OPENAI_API_KEY=

# # Anthropic Claude API Key (optional - for future AI integration)
# ANTHROPIC_API_KEY=

# # ElevenLabs API Key (optional - for future TTS integration)
# ELEVENLABS_API_KEY=

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. Copy this file to .env before running the backend
# 2. Never commit .env to version control - it contains sensitive data
# 3. Generate secure API keys for production deployment
# 4. Update CORS_ORIGINS to match your Foundry VTT domain(s)
# 5. Use Gunicorn for production deployment (see PRODUCTION SETTINGS above)
# 6. Set FLASK_ENV=production and FLASK_DEBUG=False for production

# =============================================================================
# SECURITY BEST PRACTICES
# =============================================================================

# - Use strong, randomly generated API keys
# - Restrict CORS origins to specific domains in production
# - Enable rate limiting to prevent abuse
# - Monitor logs for suspicious activity
# - Keep dependencies updated
# - Use HTTPS in production
# - Regularly rotate API keys
